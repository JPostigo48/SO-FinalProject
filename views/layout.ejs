<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistemas Operativos</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 h-screen overflow-hidden">
    <nav class="bg-blue-800 text-white flex items-center justify-between px-4" style="height:10vh;">
      <div class="flex items-center space-x-2">
        <div class="bg-white text-blue-800 font-bold rounded-full w-8 h-8 flex items-center justify-center">SO</div>
        <span class="font-semibold text-lg">Planificadores de CPU</span>
      </div>
      <% if (typeof data !== 'undefined') { %>
      <div class="flex items-center space-x-4">
        <button id="btnRR" class="px-3 py-1 rounded bg-blue-600 hover:bg-blue-700" onclick="mostrarRR()">Round&nbsp;Robin</button>
        <button id="btnSRTF" class="px-3 py-1 rounded bg-blue-600 hover:bg-blue-700" onclick="mostrarSRTF()">SRTF</button>
      </div>
      <% } %>
    </nav>

    <div class="mx-auto px-4 py-3" style="height:90vh;">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-200 text-red-800 p-3 rounded mb-3"><%= error %></div>
      <% } %>

      <div class="h-full overflow-hidden">
        <%- body %>
      </div>
    </div>

    <% if (typeof data !== 'undefined') { %>
    <script>
      function mostrarRR() {
        document.querySelectorAll('.vistaRR').forEach(el => el.style.display = 'flex');
        document.querySelectorAll('.vistaSRTF').forEach(el => el.style.display = 'none');
        document.getElementById('btnRR').classList.add('bg-blue-700');
        document.getElementById('btnSRTF').classList.remove('bg-blue-700');
      }

      function mostrarSRTF() {
        document.querySelectorAll('.vistaRR').forEach(el => el.style.display = 'none');
        document.querySelectorAll('.vistaSRTF').forEach(el => el.style.display = 'flex');
        document.getElementById('btnRR').classList.remove('bg-blue-700');
        document.getElementById('btnSRTF').classList.add('bg-blue-700');
      }

      document.addEventListener('DOMContentLoaded', () => {
        mostrarRR();
      });
    </script>
    <% } %>
  </body>
</html>
